<li>
  <ul class="unstyled doc">
    <li class="doc-title">
      <%= doc.title %>
    </li>
    <li>
      <%= link_to 'Edit', edit_doc_path(doc) %>
    </li>
    <li>
      <%= link_to 'View Published', published_doc_url(doc) %>
    </li>
    <li class="star-tally">
      <%= pluralize(doc.stars.count, 'star') %>
    </li>
    <li>
      <%= collaborator_emails(current_user, doc) %>
    </li>
    <% if owner %>
    <li>
      <%= link_to('add collaborator', new_doc_doc_privilege_path(:doc_id => doc.id), :class => 'muted') %>
    </li>
    <li class="delete">
      <%= link_to('Ã—', doc_path(doc), :method => 'delete', :confirm => "Really delete '#{doc.title}'") %>
    </li>
    <% end %>
  </ul>
</li>
